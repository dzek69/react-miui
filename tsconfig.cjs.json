{
    "extends": [
        "./tsconfig.json"
    ],
    "compilerOptions": {
        "importHelpers": false,
        "jsx": "react",
        "module": "commonjs",
        "noEmit": false,
        "noUncheckedIndexedAccess": true,
        "outDir": "./dist",
        "target": "es2017"
    },
    "include": [
        "src/",
        "next-env.d.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/__test/**",
        "src/**/*.stories.tsx"
    ]
}
